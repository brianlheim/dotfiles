""""""""""""""""""""""""""""""
" XVim config
"""""""""""""""""""""""""""""" 

set blinkcursor

set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

" Disable directional keys
map  <up>    <nop>
map  <down>  <nop>
map  <left>  <nop>
map  <right> <nop>
imap <up>    <nop>
imap <down>  <nop>
imap <left>  <nop>
imap <right> <nop>

" moving between panes
" No leader support.. :(
map <Space>h <C-w>h
map <Space>j <C-w>j
map <Space>k <C-w>k
map <Space>l <C-w>l

" tab support
map <Space>cs :xcmenucmd Show Code Snippet Library<CR>

" build
map <Space>rb :xcmenucmd Build<CR>
map <Space>ru :xcmenucmd Test<CR>

" reindent
map <Space>i ggvG :xcmenucmd Re-Indent<CR><Esc>

" every time we exit insert mode, re-indent the document
" imap <Esc> <C-i><Esc>

